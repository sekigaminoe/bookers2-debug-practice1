<h2>Follow Users</h2>

<% if @users.exists? %>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(user) do %>
              <%= image_tag user.get_profile_image, size: "50x50" %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td>フォロー数：<%= user.followings.count %></td>
          <td>フォロワー数：<%= user.followers.count %></td>
          <td><%= render "relationships/btn", user: user %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
<% else %>
  <h3>ユーザーはいません。</h3>
<% end %>
