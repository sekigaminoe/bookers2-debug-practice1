<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー中", user_relationship_path(user.id), method: :delete, class: "btn btn-sm btn-info mb-2" %>
  <% else %>
    <%= link_to "フォロー", user_relationship_path(user.id), method: :post, class: "btn btn-sm btn-success mb-2" %>
  <% end %>
<% end %>